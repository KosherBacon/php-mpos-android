<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/worker_row"
              android:orientation="horizontal"
              android:baselineAligned="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/workerStatus"
        android:textColor="#FFFFFF"
        android:layout_width="14dp"
        android:layout_height="fill_parent"
        android:textSize="20dp"
        android:background="#C8EE0000"
        android:padding="8dp"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/worker"
                android:text="@string/worker"
                android:textColor="#494646"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:padding="5px"/>
        <TextView
                android:id="@+id/workerName"
                android:textColor="#494646"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="5px"/>
        <TextView
                android:id="@+id/hashrate"
                android:text="@string/hashrate"
                android:textColor="#494646"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:padding="5px"/>
        <TextView
                android:id="@+id/hashrateValue"
                android:textColor="#494646"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="5px"/>
    </LinearLayout>
</LinearLayout>